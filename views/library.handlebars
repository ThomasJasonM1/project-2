<table>
  <tr>
    <th>Barcode</th>
    <th>Description</th>
    <th>Status</th>
  </tr>
  {{#each barcode}} {{#if active}}
  <tr>
    <td>{{UPC}}</td>
    <td><textarea maxlength="50" placeholder="{{Description}}"></textarea></td>
    <td><button class="btn btn-default" data-id="{{UPC}}">Active</button></td>
  </tr>
  {{/if}} {{/each}}
</table>
